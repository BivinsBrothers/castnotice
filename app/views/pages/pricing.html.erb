<% content_for :background do %>
  <div class="bg-full" id="bg-pricing"></div>
<% end %>

<h1>Box Office</h1>

<div class="row">
  <div class="col-md-4">
    <h3>Annual Subscription</h3>
    <div class="row annual-price">
      <div class="col-md-5">
        <h1 class="pricing">$5.83</h1>
      </div>
      <div class="col-md-5 description">
        <p>$69.99 paid annually</p>
      </div>
    </div>
    <%= link_to "Register", new_user_registration_path(account_type: Stripe::Plans::ANNUAL, promo_code: promo_code), :class => "btn register-annual" %>
  </div>
  <div class="col-md-4">
    <h3>Monthly Subscription</h3>
    <h1 class="pricing">$7.99</h1>
    <%= link_to "Register", new_user_registration_path(account_type: Stripe::Plans::MONTHLY, promo_code: promo_code), class: "btn" %>
  </div>
</div>

<%= render 'shared/talent_mentor_pricing' %>
<%= render 'shared/membership_advantages' %>

