<h1>Create an event</h1>
<p>Fill out the fields below to create a new celendar event. * Denotes a required field.</p>
<div class="row">
<div class="col-sm-3">
<%= e.label :project_title, "Name of Project"%>*
</div>
<div class="col-sm-9">
<%= e.text_field :project_title %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :project_type_id, "Project Type" %>*
</div>
<div class="col-sm-9">
<%= e.select :project_type_id, for_select_by_model(ProjectType) %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :project_type_details, "Project Type Details" %>
</div>
<div class="col-sm-9">
<%= e.text_area :project_type_details %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :region_id, "Region"%>*
</div>
<div class="col-sm-9">
<%= e.select :region_id, for_select_by_model(Region) %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :union_ids, "Union" %>*
</div>
<div class="col-sm-9">
<%= e.collection_check_boxes :union_ids, Union.all, :id, :name %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :gender, "Gender" %>*
</div>
<div class="col-sm-9">
<%= e.text_field :gender %>
</div>
</div>

<div class="row">
<div class="col-sm-3">
<%= e.label :age_min, "Age Min" %>*
</div>
<div class="col-sm-9">
<%= select_tag "event[age_min]", options_for_select((Event::AGE_MIN..Event::AGE_MAX), :age_min) %>
</div>
</div>

<div class="row">
<div class="col-sm-3">
<%= e.label :age_max, "Age Max" %>*
</div>
<div class="col-sm-9">
<%= select_tag "event[age_max]", options_for_select((Event::AGE_MIN..Event::AGE_MAX), :age_max) %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :location, "Location" %>
</div>
<div class="col-sm-9">
<%= e.text_field :location %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :casting_director, "Casting Director" %>
</div>
<div class="col-sm-9">
<%= e.text_field :casting_director %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :storyline, "Story" %>
</div>
<div class="col-sm-9">
<%= e.text_area :storyline %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :character_description, "Description" %>
</div>
<div class="col-sm-9">
<%= e.text_area :character_description %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :how_to_audition, "Audition Details" %>
</div>
<div class="col-sm-9">
<%= e.text_area :how_to_audition %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :additional_project_info, "Additional Project Info" %>
</div>
<div class="col-sm-9">
<%= e.text_area :additional_project_info %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :audition_date, "Date of Audition" %>*
</div>
<div class="col-sm-9">
<%= e.date_select :audition_date, start_year: Time.now.year, end_year: Time.now.year + 4 %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :start_date, "Start of Event" %>
</div>
<div class="col-sm-9">
<%= e.date_select :start_date, start_year: Time.now.year, end_year: Time.now.year + 4 %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :paid, "Paid?" %>
</div>
<div class="col-sm-9">
<%= e.check_box :paid %>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<%= e.label :special_notes, "Special Notes" %>
</div>
<div class="col-sm-9">
<%= e.text_area :special_notes %>
</div>
</div>
