<h1> Mentors </h1>
<%= link_to "Invite", superadmin_mentors_invite_path, class: "btn" %>

<table class="standard">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%- @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.email %></td>
        <td><%= mentor.name %></td>
        <td><%= link_to "Edit", edit_superadmin_user_path(mentor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
