<% if @resume.user.background_image %>
  <% content_for :background do %>
    <div class="bg-full" id="bg-headshot" style="background-image: url(<%= @resume.user.background_image.image_url(:background) %>)"></div>
  <% end %>
<% end %>
<h1><%= @resume.user.name %></h1>
<h3><%= @resume.descriptive_tag %></h3>


<h3>Personal Information</h3>

<div class="row repeatable-row">
	<div class="col-md-6">
	  <p>Birthday: <%= @resume.user.birthday %></p>
	  <p>Height: <%= @resume.height %></p>
	  <p>Weight: <%= @resume.weight %></p>
	  <p>Hair Color: <%= @resume.hair_color %></p>
	  <p>Eye Color: <%= @resume.eye_color %></p>
	  
	</div>
	<div class="col-md-6">
		<p>Phone: <%= @resume.phone %></p>
	  <p>Email: <%= @resume.user.email %></p>
	  <p>Unions: <%= sentence_for_category_collection(@resume.unions) %></p>
	  <p>Agent Name: <%= @resume.agent_name %></p>
	  <p>Agent Phone: <%= @resume.agent_phone %></p>
	</div>
</div>

<div class="row">
  <div class="col-md-12">
  <% if @resume.user.headshots.present? %>
    <h3>Photos</h3>
    <% @resume.user.headshots.each do |headshot| %>
      <div class="headshot"><%= image_tag(headshot.image_url(:thumb)) %></div>
    <% end %>
  <% end %>
  </div>
</div>

<div class="row">
	<div class="col-md-12">
		<% if @resume.user.videos.present? %>
		  <h3>Your Videos</h3>
		
		  <% @resume.user.videos.each do |video| %>
			<div class="video">
			  <%#= image_tag(video.video_thumb_url, class: "video-thumbnail") %>
			  <% if video.youtube_id.present? %>
				<iframe src="http://www.youtube.com/embed/<%= video.youtube_id %>?autoplay=0&rel=0&modestbranding=1&showinfo=0" frameborder="0" allowfullscreen class="cast-video"></iframe>
			  <% elsif video.vimeo_id.present? %>
				<iframe src="https://player.vimeo.com/video/<%= video.vimeo_id %>?autoplay=0&portrait=0&color=CF7513" frameborder="0" allowfullscreen class="cast-video"></iframe>
			  <% end %>
			  <%#= image_tag asset_path('button-play.png'),Â :class => "play-button" %>
			</div>
		  <% end %>
		<% end %>
	</div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-12">
      <h3>Experience</h3>
      <%= render template: 'projects/show', projects: @resume.user.projects if @resume.user.projects.present? %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Schools</h3>
      <%= render template: 'schools/show', schools: @resume.user.schools if @resume.user.schools.present?  %>
    </div>
  </div>
</div>
