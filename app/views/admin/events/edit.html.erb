<% if @event.errors.any? %>
<div id="error_explanation">
  <ul>  
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>  
</div>
<% end %>

<%= form_for @event, url: [:admin, @event], method: :put do |e| %>
  <%= render "form_fields", e: e %>

  <%= e.submit "Update Event", id: "update-event" %>
<% end %>
