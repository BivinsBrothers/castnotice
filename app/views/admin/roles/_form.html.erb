<%= form_for [:admin, @event, @role] do |f| %>
  <%= f.label :description, "Seeking" %>
  <%= f.text_field :description %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :ethnicity %>
  <%= f.text_field :ethnicity %>

  <%= f.label :age_min, "Age Min" %>*
  <%= select_tag "role[age_min]", options_for_select((Role::AGE_MIN..Role::AGE_MAX), :age_min) %>

  <%= f.label :age_max, "Age Max" %>*
  <%= select_tag "role[age_max]", options_for_select((Role::AGE_MIN..Role::AGE_MAX), :age_max) %>

  <%= f.submit "#{@role.new_record? ? "Create" : "Update" } Role" %>
<% end %>

