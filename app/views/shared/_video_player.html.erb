<% if video.youtube_id.present? %>
  <% options = { autoplay: 0, modestbranding: 1, showinfo: 0 }.merge(options || {}) %>
  <div class="video-embed vimeo">
    <iframe src="http://www.youtube.com/embed/<%= video.youtube_id %>?<%= options.to_query %>"
      frameborder="0" 
      allowfullscreen
      class="cast-video"></iframe>
  </div>
<% elsif video.vimeo_id.present? %>
  <% options = { autoplay: 0, portrait: 1, showinfo: 0 }.merge(options || {}) %>
  <div class="video-embed vimeo">
    <iframe src="https://player.vimeo.com/video/<%= video.vimeo_id %>?<%= options.to_query %>"
      frameborder="0"
      allowfullscreen
      class="cast-video"></iframe>
  </div>
<% elsif video.video_available? %>
  <div class="video-embed videojs">
    <%= videojs_rails width: "100%", height: "100%", sources: { mp4: video.video.url(:mp4), webm: video.video.url(:webm) } %>
  </div>
<% end %>
