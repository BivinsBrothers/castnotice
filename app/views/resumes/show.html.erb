<% if @resume.background_image %>
  <% content_for :background do %>
    <div class="bg-full" id="bg-headshot" style="background-image: url(<%= @resume.background_image.image_url(:background) %>)"></div>
  <% end %>
<% end %>

<%= link_to "Print Resume", print_resume_path, class: "btn" %>

<h1><%= @resume.user.name %></h1>
<%= link_to "Send Message", new_conversation_path(recipient_id: @resume.user) if can_send_messages_to?(@resume.user) %>
<h3><%= @resume.descriptive_tag %></h3>

<% if @resume.user.under_18? %>
  <h3>Parental Information</h3>
  <div class="row repeatable-row">
    <div class="col-md-6">
      <p>Name: <%= @resume.user.parent_name %></p>
      <p>Email: <%= @resume.user.parent_email %></p>
      <p>Location: <%= @resume.user.parent_location %></p>
      <p>Location 2: <%= @resume.user.parent_location_two %></p>
    </div>
    <div class="col-md-6">
      <p>City: <%= @resume.user.parent_city %></p>
      <p>State: <%= @resume.user.parent_state %></p>
      <p>Zip: <%= @resume.user.parent_zip %></p>
      <p>Phone: <%= @resume.user.parent_phone %></p>
    </div>
  </div>
<% end %>

<h3>Personal Information</h3>

<div class="row repeatable-row">
	<div class="col-md-6">
	  <p>Birthday: <%= @resume.user.birthday %></p>
	  <p>Height: <%= @resume.height %></p>
	  <p>Weight: <%= @resume.weight %></p>
	  <p>Hair Color: <%= @resume.hair_color %></p>
	  <p>Eye Color: <%= @resume.eye_color %></p>
	  
	</div>
	<div class="col-md-6">
		<p>Phone: <%= @resume.phone %></p>
	  <p>Email: <%= @resume.user.email %></p>
	  <p>Unions: <%= sentence_for_category_collection(@resume.unions) %></p>
	  <p>Agent Name: <%= @resume.agent_name %></p>
	  <p>Agent Phone: <%= @resume.agent_phone %></p>
	</div>
</div>

<div class="row">
  <div class="col-md-12">
  <% if @resume.headshots.present? %>
    <h3>Photos</h3>
    <% @resume.headshots.each do |headshot| %>
      <div class="headshot"><%= image_tag(headshot.image_url(:thumb)) %></div>
    <% end %>
  <% end %>
  </div>
</div>

<div class="row">
	<div class="col-md-12">
		<% if @resume.videos.present? %>
		  <h3>Your Videos</h3>
		
		  <% @resume.videos.each do |video| %>
			<div class="video">
			  <% if video.youtube_id.present? %>
				<iframe src="http://www.youtube.com/embed/<%= video.youtube_id %>?autoplay=0&rel=0&modestbranding=1&showinfo=0" frameborder="0" allowfullscreen class="cast-video"></iframe>
			  <% elsif video.vimeo_id.present? %>
				<iframe src="https://player.vimeo.com/video/<%= video.vimeo_id %>?autoplay=0&portrait=0&color=CF7513" frameborder="0" allowfullscreen class="cast-video"></iframe>
			  <% end %>
			</div>
		  <% end %>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Experience</h3>
    <%= render template: 'projects/show', locals: { projects: @resume.projects } if @resume.projects.present? %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Schools</h3>
    <%= render template: 'schools/show', locals: { schools: @resume.schools } if @resume.schools.present?  %>
	</div>
</div>
