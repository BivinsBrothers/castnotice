<%= form_for @resume, :url => resume_path do |f| %>
  <% if f.object.errors %>
    <% f.object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  <%= f.label :phone %>
  <%= f.phone_field :phone %>
  <%= f.label :height %>
  <%= f.select :height, height_options %>
  <%= f.label :weight %>
  <%= f.text_field :weight %>
  <%= f.label :hair_color %>
  <%= f.select :hair_color, hair_color_select %>
  <%= f.label :eye_color %>
  <%= f.select :eye_color, eye_color_select %>
  <%= f.label :unions %>
  <%= f.collection_check_boxes :unions, resume_unions, :id, :text %>
  <br>
  <%= f.label :agent_name %>
  <%= f.text_field :agent_name %>
  <%= f.label :agent_phone %>
  <%= f.phone_field :agent_phone %>
  <%= f.label :additional_skills %>
  <%= f.text_area :additional_skills %>
  <%= f.label :descriptive_tag, "Descriptive Tags" %>
  <%= f.text_field :descriptive_tag %>

  <%= f.submit "Save" %>

<% end %>

<h3>Schools</h3>

<% current_user.schools.each do |school| %>
	<div class="row repeatable-row">
    	<div class="col-md-12">
			<h4><%= school.school %> <span><%= link_to 'Edit', edit_school_path(school), class: "btn-edit" %></span></h4>
		</div>
		<div class="col-md-4">
			<p>School Type: <%= education_type_name(school.education_type) %></p>
			<p>Major: <%= school.major %></p>
		</div>
		<div class="col-md-4">
			<p>Degree: <%= school.degree %></p>
			<p>Years: <%= school.years %></p>
		</div>
		<div class="col-md-4">
			<p>Teacher: <%= school.teacher %></p>
			<p>Instrument: <%= school.instruments %></p>
		</div>
	</div>
<% end %>
<span class="glyphicon glyphicon-plus"></span> <%= link_to "Add a school", new_school_path, class: "btn-add-new" %>



<h3>Projects</h3>
<% current_user.projects.each do |project| %>
	<div class="row repeatable-row">
    	<div class="col-md-12">
			<h4>Title: <%= project.title %> <%= link_to "Edit", edit_project_path(project) %></h4>
		</div>
		<div class="col-md-4">
			<p>Project Type: <%= project_type_name(project.project_type) %></p>
    	</div>
		<div class="col-md-4">
    		<p>Role: <%= project.role %></p>
		</div>
		<div class="col-md-4">
   			<p>Director Studio: <%= project.director_studio %></p>
		</div>
	</div>
<% end %>
<span class="glyphicon glyphicon-plus"></span> <%= link_to "Add a project", new_project_path, class: "btn-add-new" %>

