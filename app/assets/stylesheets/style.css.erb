/* CSS Document #FF2626 (red) #FFBF00 (yellow)*/
html, body{
	height:100%;
	width:100%;
	font-size:14px;
	color:#FFF;
	background-color:#111;
	font-family: 'Open Sans', sans-serif;

}

h1, h2, h3, h4, h5, h6, p{
	-webkit-font-smoothing: antialiased;
	font-family: 'Open Sans', sans-serif;
}
h1{
	font-weight:300;
	color:#FFF;
	font-size:55px;
	line-height: 55px;
	margin:0 0 30px 0;
	padding:0;

}
h2{
	font-size: 25px;
	color: #FF2626;
	font-weight:300;
}
h3{
	font-size: 25px;
	color: #FFBF00;
	font-weight:300;
}
h4{
}
.glyphicon {
  top: 2px;
}

.btn-primary {
  background-color: #002F65;
  border: 1px solid transparent;
  text-transform:uppercase;
	top: 2px;
}
input, select, textarea, input[type="checkbox"]{
	margin: 0 0 15px 0;
	display: block;
}
input, select, textarea {
	color: #444;
	font-family: 'Open Sans', sans-serif;
	margin: 0;
	border: none;
	border-radius: 15px;
	padding: 5px 10px;
	
}
.btn{
	font-family: 'Open Sans', sans-serif;
	color:#fff;
	background-color: #FF2626;
	border: none;
	border-radius: 20px;
	padding: 5px 15px;
	margin: 15px 0 15px 0;
	display: block;
}
.btn:hover, .btn:focus {
  background-color: #FFBF00;
  background-position: 0 -15px;
  border: none;
}
.btn, a{
	-webkit-transition:0.8s all;
	transition:0.8s all;
}
a{
	color:#FF2626;
}
a:hover{
	text-decoration:none;
	color:#FFBF00;

}
a.active{
	color:#FFBF00;
}

/* Header styles */

header{
	position:fixed;
	top:0px;
	width:100%;
	z-index:9;
	height:105px;
}
.logobar{
	height:65px;
	position:fixed;
	top:0;
	width:100%;
	z-index:10;
	background-color:#000;
}
.logo{
	position:fixed;
	top:10px;
	left:20px;
	max-width:150px;
}
.social{
	position: fixed;
right: 20px;
top: 19px;
}
.social ul{
	list-style:none;
	padding:0;
	margin:0;
}
.social ul li{
	display:inline;

}
.social ul li:hover{
	-webkit-transition:0.4s all;
	transition:0.4s all;
}
.social ul li a, .social ul li a:last-child{
	padding: 3px;
background-color: #999;
-webkit-border-radius: 16px;
-moz-border-radius: 16px;
border-radius: 16px;
display: inline-block;
margin-left: 10px;
}

.social img{
	max-width:22px;
}


/*Main Navbar styles*/
.navbar {
	position: fixed;
	margin: 0;
	padding: 0;
	border: none;
	border-radius:0;
	background-image:url(<%= asset_path "nav-bg.png" %>);
	background-repeat:repeat;
	top:65px;
	width:100%;
	min-height:40px;
}
.navbar-default .navbar-collapse, .navbar-default .navbar-form {
border: none;
margin: 0;
padding: 0 20px;
}

.navbar-default .navbar-nav > li > a {
color: #FFF;
border-right:1px solid #FFBF00;
padding: 0 15px;
line-height: 13px;
font-size:13px;
text-transform:uppercase;
}
.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a.active {
color: #FF2626;
}
.navbar-nav {
margin: 14px 0 0 0;
}
.navbar-nav > li:first-child > a {
padding-left:0;
}
.navbar-nav > li:last-child > a,  .navbar-nav > li.lastnav a {
padding-right:0;
border-right:none;
}
.login{
	float:right;
	margin:10px 0 0 0;
}
.login a{
	color:#FF2626;
	line-height:13px;
	font-size:13px;
	text-transform:uppercase;
}
.login a:hover{
	color:#FFBF00;
}
/*Backgrounds*/
.bg-full{
	background-size:cover;
	height:100%;
	width:100%;
	position: fixed;
top: 0;
left: 0;

}
#bg-how-it-works{
	background-image:url(<%= asset_path "bg-how-it-works.jpg" %>);
	background-position:top left;
}
#bg-pricing{
	background-image:url(<%= asset_path "bg-pricing.jpg" %>);
	background-position:top right;
}
#bg-contact{
	background-image:url(<%= asset_path "bg-contact.jpg" %>);
	background-position:top right;
}
#bg-about, #bg-general{
	background-image:url(<%= asset_path "bg-about.jpg" %>);
	background-position:top right;
}
.bg-headshot {
  width: 100%;
  opacity: 0.4;
}
.add-headshots {
  width: 100px;
  height: 100px;
  border-style: solid;
  border-width: 3px;
  text-align: center;
}
.add-videos {
  width: 100px;
  height: 100px;
  border-style: solid;
  border-width: 3px;
  text-align: center;
}

/*Main Content*/
.main-content {
	position: absolute;
	top:200px;
	left:100px;
	width:35%;
	padding-bottom: 150px;
}

.main-content-right{
	position:fixed;
	top:200px;
	right:100px;
	width:35%;
	padding-bottom: 150px;
}

.subcontent-left  {
  width: 45%;
}

/* Footer styles */
footer{
	position:fixed;
	width:100%;
	height:40px;
	background-image:url(<%= asset_path "nav-bg.png" %>);
	background-repeat:repeat;
	bottom:0;
}
.footer-nav{
	list-style:none;
	padding:0;
	padding-top:10px;
}
.footer-nav li{
	display:inline;
}
.footer-nav li a{
	color: #CCC;
	border-right:1px solid #FFBF00;
	padding: 0 20px;
	line-height: 12px;
	font-size:12px;
}
.footer-nav li a.lastnav{
	border-right:none;
}
.footer-nav li a:hover{
color:#FF2626;
}
#copyright{
	text-align:right;
	padding:13px 40px 0 0;
}
#copyright p{
	color:#CCC;
	font-size:11px;

}


