<header>
  <div class="logobar">
    <div class="logo">
      <%= link_to image_tag("logo.png", alt: "Cast Notice", class: "img-responsive"), root_path %>
    </div>
    <div class="search">
      <%= form_tag search_path, method: :get, id: "search-form" do %>
        <%= label_tag :q, "Search", class: "hidden" %>
        <%= text_field_tag :q, current_query, placeholder: "Search" %>
        <%= submit_tag "Go", id: "btn-tiny" %>
      <% end %>
    </div>
    <div class="social">
    	<ul>
        <li><%= link_to image_tag("social/facebook.png", alt: "Cast Notice on Facebook"), "https://www.facebook.com/pages/CastNoticecom/297147789864" %></li>
        <li><%= link_to image_tag("social/youtube.png", alt: "Cast Notice YouTube"), "#" %></li>
        <li><%= link_to image_tag("social/twitter.png", alt: "Cast Notice on Twitter"), "https://twitter.com/CastNotice" %></li>
      </ul>
	  </div>
  </div>

	<nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to "My Close Up", page_path("dashboard") %></li>

          <% if current_user.resume %>
            <li><%= link_to "Edit Resume", edit_resume_path %></li>
          <% else %>
            <li><%= link_to "Edit Resume", edit_resume_path %></li>
          <% end %>

          <li><%= link_to "Preview Resume", resume_path %></li>

        <% else %>
          <li><%= link_to "How it works", page_path("how_it_works") %></li>
          <li><%= link_to "Box Office", page_path("pricing") %></li>
          <li><%= link_to "About us", page_path("about") %></li>
        <% end %>

        <li><%= link_to "Contact", contact_path %></li>
        <li class="lastnav"><%= link_to "Calendar", page_path("calendar") %></li>
      </ul>
      <div class="login">
        <% if current_user %>
          <% if current_user.can_send_messages? %>
            <span id="message-header"><%= message_toolbar %></span>
            /
          <% end %>
          <%= link_to "Account Information", edit_accounts_path %>
          /
          <%= link_to "sign out", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "register", page_path("pricing") %> / <%= link_to "log in", new_user_session_path %>
        <% end %>
      </div>
    </div><!-- /.navbar-collapse -->
  </nav>
</header>
