<h1> Users </h1>
<% if @account_type == "mentors" %>
  <%= link_to "Invite", superadmin_mentors_invite_path, class: "btn" %>
<% end %>

<table class="standard">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Stripe Customer ID</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%- @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.birthday %> </td>
        <td><%= user.stripe_customer_id %></td>
        <td><%= link_to "Edit", edit_superadmin_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
