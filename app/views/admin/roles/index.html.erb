<%= link_to "Add Role", new_admin_event_role_path(@event) %>

<% @roles.each do |role| %>
  <div class="role">
    <p class="description"><%= role.description %></p>
    <%= link_to "View", admin_event_role_path(@event, role) %>
    <%= link_to "Edit", edit_admin_event_role_path(@event, role) %>
    <%= link_to "Delete", admin_event_role_path(@event, role), method: :delete, confirm: "Are you sure?" %>
  </div>
<% end %>
