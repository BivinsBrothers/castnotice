.calendar-events{
	width:73%;
	float:left;
}
.calendar-controls{
	width:25%;
	float:right;
}
.castnotice-calendar{}


.calendar-events .calendar-event{
	background-image: url(<%= asset_path("nav-bg.png") %>);
	background-repeat: repeat;
	padding: 20px 0;
	border-top: 1px solid #FF2626;
	border-bottom: 1px solid #FF2626;
	margin: 0;
	}

.calendar-events .calendar-date{

	}

.calendar-events .calendar-date .calendar-month{
	color:#FF2626;
	text-align:center;
	font-size:20px;
	}

.calendar-events .calendar-date .calendar-day{
	font-size:50px;
	text-align:center;
	}

.calendar-events .calendar-name{
	color: #FFBF00;
	font-size: 28px;
	line-height: 35px;
	width:580px;
}
.calendar-events .calendar-paid{
	position: absolute;
	right: 20px;
	top: 5px;
	font-size: 20px;
	line-height: 20px;
}

.calendar-events .calendar-paid-false:after {
    content: url(<%= asset_path("calendar-paid-false.png") %>);
	padding-left: 5px;
}

.calendar-events .calendar-paid-true:after {
    content: url(<%= asset_path("calendar-paid-true.png") %>);
	padding-left: 5px;
}

.calendar-events .calendar-overview{
	padding: 10px 0;
	}

.calendar-events .calendar-overview .calendar-attribute{
	padding-bottom: 5px;
	width: 49%;
	float: left;
	}

.calendar-events .calendar-detail .calendar-description span, .calendar-events .calendar-overview .calendar-attribute span{
	color: #999;
	padding-right: 5px;

	}
.calendar-description {
	margin-bottom: 10px;
}
.calendar-events .calendar-detail {
    display: none;
	padding-bottom:20px;
}
.calendar-events .calendar-detail .calendar-event-role{
	border-bottom: 1px solid #fff;
	margin: 20px 0;
}

.calendar-events .calendar-detail p {}

.calendar-events .calendar-detail p a {}

.calendar-events .calendar-detail calendar-description{}

.calendar-events .calendar-detail calendar-description span{}

.calendar-events .calendar-shrink:before {
    content: "+";
padding: 0px 7px 2px 7px;
width: 25px;
height: 15px;
border-radius: 20px;
margin-right: 5px;
background-color: #FF2626;
cursor:pointer;
}

.calendar-events .calendar-expand:before {
    content: "-";
padding: 0px 7px 2px 7px;
width: 25px;
height: 15px;
border-radius: 20px;
margin-right: 5px;
background-color: #FF2626;
cursor:pointer;
}

.calendar-controls h2{
	margin-top:0;
	color:#fff;
	font-size:20px;
	}
.calendar-controls h3{
	margin: 5px 0 10px 0;
	color:#FF2626;
	font-size:15px;
	font-weight:normal;
	}
.calendar-matched-event-date{
    color: #ff6666;
}

.calendar-controls #calendar-datepicker{
	background-image:url(<%= asset_path("nav-bg.png") %>);
	background-repeat:repeat;
	padding: 20px;
	margin-bottom:20px;
	}

.calendar-controls table.ui-datepicker-calendar{
	width:100%;
}
.calendar-controls .ui-datepicker-header{
	margin-bottom:10px;
}
.calendar-controls .ui-datepicker-next{
	float:right;
	cursor:pointer;
}
.calendar-controls .ui-datepicker-prev{
	float:left;
	cursor:pointer;
}
.calendar-controls .ui-datepicker-title{
	text-align:center;
}
.calendar-controls .calendar-filters{
	background-image:url(<%= asset_path("nav-bg.png") %>);
	background-repeat:repeat;
	padding: 20px;
	margin-bottom:100px;
	}

.calendar-controls .calendar-filters .calendar-option{
	margin-bottom:20px;
	width: 100%;
	}

.calendar-controls .calendar-filters .calendar-option .calendar-checkbox{
	width: 50%;
	float: left;
}
.calendar-controls .calendar-filters .calendar-option .calendar-checkbox:last-child {
	margin-bottom:20px;
}

.calendar-controls .calendar-filters .calendar-option .calendar-checkbox input{
	width: 14px;
	height: 14px;
	padding: 0;
	margin: 0;
	vertical-align: bottom;
	position: relative;
	top: -1px;
	display: inline;
	}

.calendar-controls .calendar-filters .calendar-option .calendar-checkbox label{
	font-weight: normal;
	font-size: 12px;
	padding-left: 0px;
	padding-right:3px;
	margin: 0;
	display: inline;
	float:none;
}


@media (max-width: 1200px){
.calendar-controls .calendar-filters .calendar-option .calendar-checkbox {
	width: 100%;
	float: none;
}
.calendar-events .calendar-name{
	font-size: 26px;
	line-height: 33px;
	width:460px;
}
}
@media (max-width: 991px){
.calendar-controls #calendar-datepicker {
	padding: 10px;
	font-size: 10px;
}
.calendar-controls h2 {
	font-size: 15px;
}
.calendar-controls h3 {
	margin: 5px 0 5px 0;
	font-size: 13px;
}
.calendar-controls .calendar-filters {
	padding: 10px;
	margin-bottom: 50px;
}
.calendar-controls .calendar-filters .calendar-option .calendar-checkbox label{
	font-size: 10px;
	padding-right:0px;
}

}
@media (max-width: 767px){
.calendar-controls {
	width: 100%;
	float: left;
}
.calendar-events {
width: 100%;
float: left;
margin-bottom: 20px;
}
.calendar-controls .calendar-filters .calendar-option .calendar-checkbox {
width: 33%;
float: left;
}
.calendar-controls h3 {
margin: 5px 0 5px 0;
font-size: 13px;
float: left;
width: 100%;
}
}
