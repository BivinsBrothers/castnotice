<% content_for :background do %>
  <div class="bg-full" id="bg-about"></div>
<% end %>

  <h3>Conversation with <%= @with %></h3>

  <div class="messages">
    <% @messages.each do |message| %>
      <div class="message <% if message.to == current_user.id %>reply<% end %>">
        <div>
          <%= message.created_at %>
          </div>
          <div>
            <%= message.body %>
          </div>
          
  
      </div>
    <% end %>

  </div>