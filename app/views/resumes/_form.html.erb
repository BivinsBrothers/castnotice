<%= form_for resume, :url => resume_path do |f| %>
  <% if f.object.errors %>
    <% f.object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
<div class="row">
	<h2>Personal Information</h2>
	<div class="col-md-6">
			<%= f.label :phone %>
			<%= f.phone_field :phone %>
			<%= f.label :gender %>
			<%= f.select :gender, gender_select %>
			<%= f.label :citizen, "Citizenship?" %>
			<%= f.select :citizen, citizen_select %>
			<p>Do you have a current passport?</p>
			  <div class="radio-box-group">
				  <%= f.label :passport, "Yes", :value => "true" %>
				  <%= f.radio_button :passport, true %>
				  <%= f.label :passport, "No", :value => "false" %>
				  <%= f.radio_button :passport, false %>
			  </div>
			<%= f.label :unions %>
			<%= f.collection_check_boxes :unions, resume_unions, :id, :text %>
			<br>
			<%= f.label :agent_name %>
			<%= f.text_field :agent_name %>
			<%= f.label :agent_phone %>
			<%= f.phone_field :agent_phone %>
			<%= f.label :additional_skills %>
			<%= f.text_area :additional_skills %>
			<%= f.label :descriptive_tag, "Descriptive Tags" %>
			<%= f.text_field :descriptive_tag %>
		</div>
		<div class="col-md-6">
			<%= f.label :height %>
			<%= f.select :height, height_options %>
			<%= f.label :weight %>
			<%= f.text_field :weight %>
			<%= f.label :hair_color %>
			<%= f.select :hair_color, hair_color_select %>
			<%= f.label :eye_color %>
			<%= f.select :eye_color, eye_color_select %>
			<%= f.label :hair_length %>
			<%= f.select :hair_length, hair_length_select %>
			<%= f.label :piercing, "Do you have Piercings" %>
			<%= f.select :piercing, piercing_select %>
			<%= f.label :tattoo, "Do you have Tattoos?" %>
			<%= f.select :tattoo, tatoo_select %>
		</div>
	</div>
  <%= f.submit "Save" %>

<% end %>
<div class="row">
	<div class="col-md-12">
		<h2>Head Shots</h2>
		<div class="add-new-btn-wrapper">
		<% if current_user.at_maximum_headshots? %>
		  <h3>You have already uploaded the maximum number of head shots. Please delete an existing head shot before trying to add a new one.</h3>
		<% else %>
		  <span class="glyphicon glyphicon-plus"></span> <%= link_to 'Add Head Shot', '#new-headshot-form', class: "btn-add-new show-headshot-form" %>
		<% end %>
		</div>
		
		<div class="is-hidden new-headshot-form" id="new-headshot-form">
		  <%= form_for @headshot, :multipart => true do |f| %>
			<%= f.file_field :image, :id => "headshot_image" %>
			<%= f.hidden_field :image_cache %>
		
			<%= f.submit "Upload Head Shot", :disabled => "disabled", :id => "upload-headshot-button" %>
		  <% end %>
		</div>
		
		<div class="headshot-list">
		  <% current_user.headshots.each do |headshot| %>
			<div class="headshot">
				<div class="headshot-image">
					<%= image_tag(headshot.image_url(:thumb)) %>
				</div>
				<div class="headshot-links">
					<%= link_to "Delete", headshot_path(headshot), method: :delete %> |
					<% if headshot.background? %>
					  Current background â€“ <%= link_to "Remove", headshot_path(headshot, background: false), method: :put %>
					<% else %>
					  <%= link_to "Set as background", headshot_path(headshot, background: true), method: :put %>
					<% end %>
				</div>
			</div>
		  <% end %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h2>Videos</h2>
		<div class="add-new-btn-wrapper">
		<% if current_user.at_maximum_videos? %>
		  <h2>You have already uploaded the maximum videos, please delete and existing video to add a new one.</h2>
		<% else %>
		  <div class="add-new-btn-wrapper"><span class="glyphicon glyphicon-plus"></span><%= link_to "Add a video", "#new-video-form", class: "btn-add-new show-video-form" %>
		<% end %>
		</div>
		
		<div class="is-hidden new-video-form" id="new-video-form">
		  <%= form_for @video, :multipart => true do |f| %>
			<%= f.text_field :video_url %>
			<%= f.submit "Upload Video", :disabled => "disabled", :class => "video-save", :id => "upload-video-button" %>
		  <% end %>
		</div>
		
		<div class="video-list">
		  <% current_user.videos.each do |video| %>
			<%= render 'video', :video => video %>
		  <% end %>
		</div>

	</div>
</div>

